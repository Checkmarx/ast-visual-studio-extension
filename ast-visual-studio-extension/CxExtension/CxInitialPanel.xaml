<UserControl x:Class="ast_visual_studio_extension.CxExtension.CxInitialPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ast_visual_studio_extension"
             local:VsTheme.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="1308"
             Name="CheckmarxInitialPanel">

    <StackPanel x:Name="InitialPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image x:Name="InitialPanelIcon" Stretch="None" />
        <Button Content="Open Settings" Margin="0,15,0,0" Click="OnClickOpenSettings"/>
    </StackPanel>
</UserControl>
