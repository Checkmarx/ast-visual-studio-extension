<UserControl x:Class="ast_visual_studio_extension.CxExtension.DevAssist.UI.FindingsWindow.DevAssistFindingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ast_visual_studio_extension.CxExtension.DevAssist.UI.FindingsWindow"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}">

    <UserControl.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- TreeViewItem Style with hover and selection effects -->
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
            <Setter Property="Padding" Value="2"/>
            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Border x:Name="Bd"
                                    Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Expander Toggle -->
                                    <ToggleButton x:Name="Expander"
                                                  Grid.Column="0"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="16" Height="16"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="Transparent" Width="16" Height="16">
                                                                <TextBlock x:Name="ExpanderText"
                                                                           Text="â–¶"
                                                                           FontSize="10"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="ExpanderText" Property="Text" Value="â–¼"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    <!-- Content -->
                                    <ContentPresenter x:Name="PART_Header"
                                                      Grid.Column="1"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                </Grid>
                            </Border>
                            <!-- Children -->
                            <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" Margin="16,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hide expander if no children -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarMouseOverBackgroundGradientBrushKey}}"/>
                            </Trigger>
                            <!-- Selection effect -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarSelectedBrushKey}}"/>
                            </Trigger>
                            <!-- Collapsed state -->
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style (JetBrains-like) -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarMouseOverBackgroundGradientBrushKey}}"/>
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarBorderBrushKey}}"/>
                            </Trigger>
                            <!-- Checked (selected) state -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarSelectedBrushKey}}"/>
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.AccentBorderBrushKey}}"/>
                            </Trigger>
                            <!-- Checked + Hover -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background"
                                        Value="{DynamicResource {x:Static vsui:EnvironmentColors.CommandBarMouseDownBackgroundGradientBrushKey}}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading Indicator (Overlay) -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                x:Name="LoadingOverlay"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Loading findings..." FontSize="14" FontWeight="Bold"
                           Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Top Toolbar: Filters + Action Buttons -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
                BorderBrush="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBorderBrushKey}}"
                BorderThickness="0,0,0,1"
                Padding="4,2">
            <!-- All buttons on the right side -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Malicious Filter Button -->
                <ToggleButton x:Name="MaliciousFilterButton"
                             Style="{StaticResource FilterButtonStyle}"
                             Width="32" Height="32" Margin="2,0"
                             ToolTip="Filter Malicious packages"
                             Click="SeverityFilter_Click"
                             Tag="Malicious">
                    <Image x:Name="MaliciousFilterIcon" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </ToggleButton>

                <!-- Critical Filter Button -->
                <ToggleButton x:Name="CriticalFilterButton"
                             Style="{StaticResource FilterButtonStyle}"
                             Width="32" Height="32" Margin="2,0"
                             ToolTip="Filter Critical severity"
                             Click="SeverityFilter_Click"
                             Tag="Critical">
                    <Image x:Name="CriticalFilterIcon" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </ToggleButton>

                <!-- High Filter Button -->
                <ToggleButton x:Name="HighFilterButton"
                             Style="{StaticResource FilterButtonStyle}"
                             Width="32" Height="32" Margin="2,0"
                             ToolTip="Filter High severity"
                             Click="SeverityFilter_Click"
                             Tag="High">
                    <Image x:Name="HighFilterIcon" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </ToggleButton>

                <!-- Medium Filter Button -->
                <ToggleButton x:Name="MediumFilterButton"
                             Style="{StaticResource FilterButtonStyle}"
                             Width="32" Height="32" Margin="2,0"
                             ToolTip="Filter Medium severity"
                             Click="SeverityFilter_Click"
                             Tag="Medium">
                    <Image x:Name="MediumFilterIcon" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </ToggleButton>

                <!-- Low Filter Button -->
                <ToggleButton x:Name="LowFilterButton"
                             Style="{StaticResource FilterButtonStyle}"
                             Width="32" Height="32" Margin="2,0"
                             ToolTip="Filter Low severity"
                             Click="SeverityFilter_Click"
                             Tag="Low">
                    <Image x:Name="LowFilterIcon" Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </ToggleButton>

                <!-- Expand All Button -->
                <Button x:Name="ExpandAllButton"
                        Click="ExpandAll_Click"
                        ToolTip="Expand All"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Width="24" Height="24" Margin="2,0"
                        Background="Transparent" BorderThickness="0">
                    <TextBlock Text="âŠž" FontSize="14"
                               Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                </Button>

                <!-- Collapse All Button -->
                <Button x:Name="CollapseAllButton"
                        Click="CollapseAll_Click"
                        ToolTip="Collapse All"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Width="24" Height="24" Margin="2,0"
                        Background="Transparent" BorderThickness="0">
                    <TextBlock Text="âŠŸ" FontSize="14"
                               Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                </Button>

                <!-- Settings Button -->
                <Button x:Name="SettingsButton"
                        Click="Settings_Click"
                        ToolTip="Settings"
                        Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Width="24" Height="24" Margin="2,0"
                        Background="Transparent" BorderThickness="0">
                    <TextBlock Text="âš™" FontSize="14"
                               Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- TreeView -->
        <TreeView Grid.Row="1" Name="FindingsTreeView"
                  ItemsSource="{Binding FileNodes}"
                  ItemContainerStyle="{StaticResource TreeViewItemStyle}"
                  BorderThickness="0"
                  Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
                  Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}">

            <!-- Context Menu -->
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" Click="CopyMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ“‹" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Navigate to Code" Click="NavigateMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="âž¡" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Ignore Finding" Click="IgnoreMenuItem_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸš«" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </TreeView.ContextMenu>

            <TreeView.Resources>
                <!-- File Node Template -->
                <HierarchicalDataTemplate DataType="{x:Type local:FileNode}" ItemsSource="{Binding Vulnerabilities}">
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <!-- File Icon -->
                        <Image Source="{Binding FileIcon}" Width="16" Height="16" Margin="0,0,4,0" 
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        
                        <!-- File Name -->
                        <TextBlock Text="{Binding FileName}" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"
                                   Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>

                        <!-- Severity Count Badges (Horizontal Layout) -->
                        <ItemsControl ItemsSource="{Binding SeverityCounts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Severity Badge with colored background -->
                                    <Border Background="#20FFFFFF"
                                            BorderBrush="#40FFFFFF"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Padding="4,2"
                                            Margin="0,0,4,0">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Severity Icon -->
                                            <Image Source="{Binding Icon}" Width="14" Height="14" Margin="0,0,3,0"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                            <!-- Count -->
                                            <TextBlock Text="{Binding Count}" FontWeight="Bold" FontSize="11"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </HierarchicalDataTemplate>

                <!-- Vulnerability Node Template -->
                <DataTemplate DataType="{x:Type local:VulnerabilityNode}">
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <!-- Severity Icon -->
                        <Image Source="{Binding SeverityIcon}" Width="16" Height="16" Margin="0,0,4,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Description -->
                        <TextBlock Text="{Binding DisplayText}" VerticalAlignment="Center" TextWrapping="NoWrap"
                                   Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

        <!-- Empty State Message -->
        <Border Grid.Row="1"
                Visibility="{Binding HasFindings, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"
                           Opacity="0.3"/>
                <TextBlock Text="No vulnerabilities found" FontSize="16" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,10"
                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
                <TextBlock Text="Run a scan to see findings" FontSize="12"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                           Opacity="0.7"/>
            </StackPanel>
        </Border>

        <!-- Status Bar / Summary -->
        <Border Grid.Row="2"
                Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
                BorderBrush="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBorderBrushKey}}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <TextBlock Text="{Binding StatusBarText}"
                       FontSize="11"
                       Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"/>
        </Border>

    </Grid>
</UserControl>

